<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url"
            placeholder="http://"
            value="{{ instructor.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <input 
            type="text" 
            name="name"
            placeholder="Nome do instrutor"
            value="{{ instructor.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ instructor.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                    {% if instructor.gender == 'M' %}
                        checked
                    {% endif %} value="M"> Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender"
                    {% if instructor.gender == 'F' %}
                        checked
                    {% endif %} value="F"> Feminino
        </span>
    </div>

    <div class="item">
        <div>Área de atuação</div>
        <div>
            <input 
                type="text" 
                name="services"
                placeholder="Separe por virgurla, os serviços prestados"
                value="{{ instructor.services }}"
            >
        </div>
    </div>

<button type="submit">Salvar</button>